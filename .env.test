# Daily Alert Summary Agent - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains secrets!

# Grafana MCP Configuration
# -------------------------
# Base URL for your Grafana instance (include protocol and port if needed)
GRAFANA_MCP_BASE_URL=https://your-grafana-instance.com

# Grafana API token or service account token for MCP access
# Create at: Grafana > Configuration > API Keys or Service Accounts
GRAFANA_MCP_TOKEN=your_grafana_token_here

# Optional: Grafana organization ID
# GRAFANA_MCP_ORG_ID=1

# OpenRouter AI Configuration
# ---------------------------
# API key from OpenRouter (https://openrouter.ai/)
# Used for AI processing and summary generation
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Override default AI model
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Optional: Override max tokens for AI responses
# OPENROUTER_MAX_TOKENS=4000

# Slack Integration Configuration
# -------------------------------
# Bot token for your Slack app (starts with xoxb-)
# Create at: https://api.slack.com/apps > OAuth & Permissions
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Slack channel ID where daily summaries will be posted
# Find ID: Right-click channel > View channel details > Channel ID at bottom
SLACK_CHANNEL_ID=C1234567890

# Optional: Enable threaded replies
# SLACK_THREAD_REPLIES=false

# Application Configuration
# -------------------------
# Optional: Application environment (development, staging, production)
# ALERT_AGENT_ENV=development

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# ALERT_AGENT_LOG_LEVEL=INFO

# Optional: Daily summary schedule time (HH:MM format)
# ALERT_AGENT_SCHEDULE_TIME=09:00

# Optional: Timezone for scheduling (IANA timezone name)
# ALERT_AGENT_TIMEZONE=UTC

# Optional: Hours to look back for alerts
# GRAFANA_MCP_LOOKBACK_HOURS=24

# Optional: Timeout settings (in seconds)
# GRAFANA_MCP_TIMEOUT_SECONDS=30
# SLACK_TIMEOUT_SECONDS=20
# OPENROUTER_TIMEOUT_SECONDS=60

# Feature Flags
# -------------
# Optional: Enable various features (true/false)
# ENABLE_AI_GROUPING=true
# ENABLE_SUMMARY_REFINEMENT=true
# ENABLE_SLACK_THREADING=false
# ENABLE_ADVANCED_FILTERING=true
# ENABLE_METRIC_COLLECTION=false
