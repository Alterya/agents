{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "vitest/globals", "react", "react-dom"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs", "vitest.setup.ts"],
  "exclude": ["node_modules", ".next", "dist", "coverage"]
}
