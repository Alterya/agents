{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es2017",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "app/*": ["./app/*"]
    },
    "types": ["node", "vitest/globals", "react", "react-dom"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "vitest.setup.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage",
    "src/**/__tests__/**",
    "app/**/__tests__/**"
  ]
}
